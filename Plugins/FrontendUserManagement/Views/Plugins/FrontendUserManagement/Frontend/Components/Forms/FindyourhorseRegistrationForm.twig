{% extends '@parent/Plugins/FrontendUserManagement/Frontend/Components/Forms/RegistrationForm.twig' %}

{% block registration_form %}
    <form class="form form--registration"
          action="{{ url('frontend_registration_process') }}?fyh=true"
          method="post">
        <div class="form-controls">
            <div class="form__control">
                <label class="form__label"
                       for="frontend_registration_fyh_email">
                    E-Mail bei FindYourHorse
                </label>
                <input id="frontend_registration_fyh_email"
                       name="frontend_registration_fyh_email"
                       type="email"
                       class="form__input "
                       placeholder="{{ i18n('fyh_email', {
                           de: "E-Mail eintragen..."
                       }) }}"
                       required
                       data-required>
            </div>
            <div class="form__control">
                <label class="form__label"
                       for="frontend_registration_email">
                    E-Mail bei All Your Horses
                </label>
                <input id="frontend_registration_email"
                       name="frontend_registration_email"
                       type="email"
                       class="form__input {% block registration_email_classes %}{% endblock registration_email_classes %}"
                       placeholder="{{ i18n('ayh_email', {
                           de: "E-Mail eintragen..."
                       } ) }}"
                       required
                       data-required>
            </div>
            {% block registration_field_nickname %}
                <div class="form__control">
                    <label class="form__label"
                           for="frontend_registration_nickname">
                        Nutzername
                    </label>
                    <input id="frontend_registration_nickname"
                           name="frontend_registration_nickname"
                           type="text"
                           class="form__input {% block registration_nickname_classes %}{% endblock registration_nickname_classes %}"
                           placeholder="{{ i18n('nickname') }}">
                </div>
            {% endblock registration_field_nickname %}

            <div class="form__control">
                <label class="form__label"
                       for="frontend_registration_password">
                    Passwort
                </label>
                <input id="frontend_registration_password"
                       name="frontend_registration_password"
                       type="password"
                       minlength="6"
                       class="form__input {% block registration_password_classes %}{% endblock registration_password_classes %}"
                       placeholder="{{ i18n('password') }}"
                       required
                       data-required>
            </div>
            <div class="form__control">
                <label class="form__label"
                       for="frontend_registration_password_confirm">
                    Passwort best√§tigen
                </label>
                <input id="frontend_registration_password_confirm"
                       name="frontend_registration_password_confirm"
                       type="password"
                       class="form__input {% block registration_password_confirm_classes %}{% endblock registration_password_confirm_classes %}"
                       placeholder="{{ i18n('confirm password') }}"
                       required
                       data-required>
            </div>
            {% block registration_privacy_notice %}
                <div class="form__control flex flex--row flex--center">
                    <input id="frontend_registration_privacy_notice_accepted"
                           name="frontend_registration_privacy_notice_accepted"
                           type="checkbox"
                           class="form__input form__input--checkbox"
                           required
                           data-required>
                    <label for="frontend_registration_privacy_notice_accepted"
                           class="form__label form__label--checkbox space-left sub">{{ i18n('accept_privacy_notice') }}</label>
                </div>
            {% endblock registration_privacy_notice %}
            {% block registration_agb_notice %}
                <div class="form__control flex flex--row flex--center">
                    <input id="frontend_registration_agb_notice_accepted"
                           name="frontend_registration_agb_accepted"
                           type="checkbox"
                           class="form__input form__input--checkbox"
                           required
                           data-required>
                    <label for="frontend_registration_agb_notice_accepted"
                           class="form__label form__label--checkbox space-left sub">{{ i18n('accept_agb_notice') }}</label>
                </div>
            {% endblock registration_agb_notice %}
            <div class="form__control" style="text-align: center;">
                <input type="hidden" name="token" value="{{ token() }}">
                {% if meta.route.referrer %}
                    <input type="hidden" name="frontend_registration_referrer" value="{{ meta.route.referrer }}" />
                {% endif %}
                {% if meta.force.referrer %}
                    <input type="hidden" name="frontend_registration_referrer_force" value="{{ meta.force.referrer }}" />
                {% endif %}
                <input type="submit"
                       value="{{ i18n('register_now') }}"
                       class="form__input form__input--submit btn">
            </div>
        </div>
    </form>
{% endblock registration_form %}
