<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-body">
                <form method="post">
                    {% if types is defined %}
                        <div class="form-group crud-datatype-select">
                            <label for="form_insertion_types">{{ i18n('insertion_type') }}</label>
                            <select class="form-control" id="form_insertion_types" name="type">
                                {% include 'Plugins/Insertion/Backend/BackendInsertion/CRUD/TypeOptions.twig' with { types: types, parent: null } %}
                            </select>
                        </div>

                        <div class="form-group crud-datatype-select">
                            <label for="form_insertion_user">{{ i18n('insertion_user') }}</label>
                            <select class="form-control" id="form_insertion_user" name="user">
                                {% for user in users %}
                                    <option value="{{ user.id }}">{{ user.email }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="{{ i18n('choose') }}" />
                        </div>
                    {% endif %}

                    {% if typeId is defined %}
                        <input type="hidden" value="{{ typeId }}" name="type" />
                        <input type="hidden" value="{{ userId }}" name="user" />
                        <input type="hidden" value="0" name="current_page" />
                        <input type="hidden" value="create" name="action" />

                        {% include 'Plugins/Insertion/Frontend/FrontendInsertion/PageContent/1.twig' %}
                        {% include 'Plugins/Insertion/Frontend/FrontendInsertion/PageContent/2.twig' %}
                        {% include 'Plugins/Insertion/Frontend/FrontendInsertion/PageContent/3.twig' %}

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="{{ i18n('save') }}" />
                        </div>

                    {% endif %}
                </form>
                <div class="btn-group pull-left">
                    {% if insertion.moderation %}
                        <a class="btn btn-primary" href="{{ url('backend_insertions_disapproveInsertion', {id : insertion.id} ) }}">{{ i18n('disapprove') }}</a>
                    {% else %}
                        <a class="btn btn-primary" href="{{ url('backend_insertions_approveInsertion', {id : insertion.id}) }}">{{ i18n('approve') }}</a>
                    {% endif %}

                    <a class="btn btn-primary" href="{{ url('backend_insertions_changeUser', {id : insertion.id}) }}">{{ i18n('change_user') }}</a>
                </div>
            </div>
        </div>
    </div>
</div>

