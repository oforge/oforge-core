{% extends "@parent/Frontend/Layout.twig" %}
{% block content %}
    {% include 'Plugins/FrontendUserManagement/Frontend/Components/AccountNavBar.twig' with { back_link : true, content_title: i18n('frontend_account_insertions', 'Insertions')} %}
    <div class="account content">
        {% block account %}
            <div class="panel panel--account flex">
                {% block account__sidebar %}
                    {% include 'Plugins/FrontendUserManagement/Frontend/Components/Sidebar.twig' %}
                {% endblock account__sidebar %}

                {% block account__content %}
                    <div class="account__content">
                        <h1 class="form__title">{{ i18n('frontend_user_insertions_headline') }}</h1>
                        <div class="user--insertions">

                            {% if insertions|length > 0 %}
                                <h2 class="form__title form__title--helpdesk">{{ i18n('insertions') }}</h2>
                            {% endif %}
                            <div id="insertion-container" class="">
                                {% include 'Frontend/Components/Insertions/UserList.twig' with { insertions : insertions } %}
                            </div>

                            {% if insertions|length >= 10 %}
                                <a href="#" class="button" data-addmore="true" data-container="#insertion-container"
                                   data-url="{{ url('frontend_account_insertions_page') }}">
                                    <!-- /insertions/search?page=3 -->
                                    <span>load more </span>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endblock account__content %}

            </div>
        {% endblock account %}
    </div>
{% endblock content %}
