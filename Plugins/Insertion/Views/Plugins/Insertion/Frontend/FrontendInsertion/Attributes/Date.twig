<div class="form__control form__control--{{ attribute.filterType }}">
    <label for="insertion[{{ attribute.id }}]"
           class="form__label {{ label_class }}">{% if attribute.name|lower == 'age' %}{{ i18n('day_of_birth', 'Geburtsdatum') }}{% else %}{{ i18n(attribute.name) }}{% endif %}{% if required %}<span class="required">*</span>{% endif %}</label>
    <input type="text"
           name="insertion[{{ attribute.id }}]"
           value="{{ data['insertion'][attribute.id] }}"
           class="form__input form-control"
           id="datepicker"
           placeholder="YYYY-MM-DD"
           {% if required %}required{% endif %}/>
</div>
