            if(cookie_consent === "accepted") {
                if(cookie_enabled && cookie_enabled.includes('Google Tag Manager')){
                    initGtag();
                } else {
                    document.addEventListener('gtag-accepted', function () {
                        initGtag();
                    }, false);
                }
            } else {
                document.addEventListener('gtag-accepted', function () {
                    initGtag();
                }, false);
