{% block mobile_nav_bar %}
    <div class="nav-bar nav-bar--mobile">
        {% if back_link is defined %}
            {% block back_link %}
                <a href="{{ url(back_link) }}" class="back-link">
                    <svg class="icon icon--light icon--turn-left">
                        <use xlink:href="#arrow"></use>
                    </svg>
                </a>
            {% endblock back_link %}
        {% else %}
            <div></div>
        {% endif %}
        <h3 class="nav-bar__title">{{ nav_title }}</h3>

        {% if nav_menu is defined %}
            {% block nav_menu %}
                <div class="nav-bar__menu">
                    <input type="checkbox" id="nav-bar__nav" class="toggle-menu toggle-menu--nav-bar">
                    <label for="nav-bar__nav" class="toggle-menu__icon">
                        <svg class="icon icon--light">
                            <use xlink:href="#arrow"></use>
                        </svg>
                    </label>
                    <nav class="toggle-menu__nav toggle-down">
                        <ul class="toggle-menu__list">
                            {% for nav_item in nav_menu %}
                                <li class="toggle-menu__item">
                                    <a href="{{ url(nav_item.path) }}">
                                        <span class="toggle-menu__text">
                                            {{ i18n(nav_item.name) }}
                                        </span>
                                        {% if nav_item.icon %}
                                            <svg class="icon">
                                                <use xlink:href="#{{ nav_item.icon }}"></use>
                                            </svg>
                                        {% endif %}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
            {% endblock nav_menu %}
        {% endif %}
    </div>
{% endblock mobile_nav_bar %}
